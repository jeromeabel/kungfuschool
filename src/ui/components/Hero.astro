---
import { Image } from 'astro:assets';

import CTALink from '@components/links/CTALink.astro';
import heroImg from '@assets/hero.jpg';

const baseURL = import.meta.env.BASE_URL;
const subscribeLink = `${baseURL}/school#infos`;
const coursesLink = `${baseURL}/courses`;
---

<section class="relative h-screen max-h-[900px] bg-gradient-to-r from-black from-20%">
	<div class="grid h-full items-center">
		<div class="container flex flex-col gap-4">
			<h1 class="text-6xl uppercase tracking-wider">Kung Fu School</h1>
			<p class="max-w-xl text-4xl">Experience the ancient art of self-defense and inner calm</p>
			<div class="mt-8 flex gap-4">
				<CTALink label="Register Now" href={subscribeLink} />
				<CTALink outline={true} label="Check Our Courses" href={coursesLink} />
			</div>
		</div>
	</div>
	<Image
		src={heroImg}
		alt=""
		class="absolute inset-0 -z-10 h-full w-full object-cover"
		loading="lazy"
		aria-hidden="true"
	/>
</section>
