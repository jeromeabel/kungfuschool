---
import Section from '@components/Section.astro';
import CTALink from '@components/links/CTALink.astro';
import H2 from '@components/H2.astro';
import NewsGrid from '@components/blog/NewsGrid.astro';
import Container from '@components/Container.astro';

const baseURL = import.meta.env.BASE_URL;
const linkNews = `${baseURL}/blog`;

interface Props {
	nb?: number;
	cols?: number;
	rounded?: boolean;
}
const { nb = 2, cols = 2, rounded } = Astro.props;
---

<Section>
	<Container>
		<H2>Latest news</H2>
		<NewsGrid {nb} {cols} {rounded} />
		<CTALink href={linkNews} label="All news" icon="carbon:arrow-right" outline />
	</Container>
</Section>
