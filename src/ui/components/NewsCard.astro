---
import { Image } from 'astro:assets';

const { data, slug, cols, rounded = false } = Astro.props;

const baseURL = import.meta.env.BASE_URL;
const linkNews = `${baseURL}/blog/${slug}`;
const newWidth = 1440 / cols;
---

<a href={linkNews} title=`Open "${data.title}"` class="hover:opacity-70">
	<article class="flex h-full flex-col gap-4">
		<Image
			src={data.cover}
			alt={data.title}
			width={newWidth}
			class:list={['h-96 object-cover object-top', { rounded: rounded }]}
		/>
		<div>
			<h2 class="text-lg font-bold md:text-xl lg:text-3xl">{data.title}</h2>
			<p>{data.headline}</p>
		</div>
	</article>
</a>
